{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=meowshare.db"
  },
  "FileStorage": {
    "Path": "uploads",
    "MaxFileSize": 104857600,
    "ChunkSize": 5242880,
    "MaxUserStorage": 1073741824,
    "EnableEncryption": false,
    "DefaultExpirationDays": 7
  },
  "DataStorage": {
    "Path": "App_Data"
  },
  "EmailConfig": {
    "SmtpHost": "",
    "SmtpPort": 587,
    "SmtpUser": "",
    "SmtpPassword": "",
    "SmtpFromEmail": "noreply@example.com",
    "SmtpFromName": "MeowShare",
    "EnableSsl": true
  },
  "AllowedHosts": "*"
}